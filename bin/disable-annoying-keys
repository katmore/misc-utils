#!/bin/sh
# Disables the INS and NUMLOCK keys
#
# Usage:
#   disable-ins-key
#
# Install path: /usr/local/bin/disable-ins-key
#
# Dependencies: xmodmap
#
# This script is part of the "katmore/misc-utils" project, see
# https://github.com/katmore/misc-utils for more information.
#

# disable INS (map to nothing)
xmodmap -e "keycode 118 ="

# map NUMLOCK to F13 (in case it's needed for something)
xmodmap -e "remove mod2 = Num_Lock" \
        -e "keycode 77 = F13"

# map cursor keys to numeral keys even when NUMLOCK is off
xmodmap -e "keysym KP_End = KP_1" \
        -e "keysym KP_Down = KP_2" \
        -e "keysym KP_Next = KP_3" \
        -e "keysym KP_Left = KP_4" \
        -e "keysym KP_Begin = KP_5" \
        -e "keysym KP_Right = KP_6" \
        -e "keysym KP_Home = KP_7" \
        -e "keysym KP_Up = KP_8" \
        -e "keysym KP_Prior = KP_9" \
        -e "keysym KP_Insert = KP_0" \
        -e "keysym KP_Delete = KP_Decimal"
